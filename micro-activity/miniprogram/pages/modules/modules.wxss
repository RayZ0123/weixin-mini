/* miniprogram/pages/modules/modules.wxss */
.module-type-cont {
  width: 100%;
  margin-bottom: 0.5rem;
}

.module-type-content {
  padding: 0.2rem 1rem;
}

.module-type-title {
  width: 100%;
  margin-bottom: 0.6rem;
  font-size: 1rem;
}

.module-list-cont {
  width: 100%;
}

.module-list-item {
  display: inline-block;
  width: 50%;
  text-align: center;
  margin-bottom: 0.5rem;
}

.module-item-cont {
  width: 90%;
  display: inline-block;
  position: relative;
}

.activity-module-cover {
  width: 100%;
  height: 4rem;
  border-radius: 0.3rem;
}

.module-title {
  display: block;
  font-size: 0.8rem;
  color: #666;
  text-align: center;
  width: 100%;
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.form-submit-btn-cont {
  width: 100%;
  text-align: center;
  background-color: #FFFFFF;
  padding: 1rem 0;
}

.form-submit-btn {
  display: inline-block;
  width: 80%;
  background-color: #FF7F24;
  color: #FFFFFF;
}

.form-submit-btn-hover {
  background-color: rgba(255, 127, 36, 0.521);
}