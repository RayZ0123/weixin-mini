/* miniprogram/pages/form/form.wxss */
.page-warp {
  background-color: #F1F1F1;
}
.activity-module-cont {
  position: relative;
}

.activity-module-warp {
  width: 100%;
}
.activity-module-cover {
  width: 100%;
  height: 10rem;
}

.change-module-btn {
  position: absolute;
  right: 1rem;
  top: 1rem;
  background-color: rgba(0, 0, 0, 0.750);
  color: #FFFFFF;
  font-size: 0.8rem;
  padding: 0.15rem 0.4rem;
  border-radius: 0.2rem;
}

.activity-form-cont {
  background-color: #F1F1F1;
}

.fomr-group {
  margin-bottom: 0.8rem;
  background-color: #FFFFFF;
  padding: 0 0.8rem;
}

.form-item {
  width: 100%;
  display: inline-flex;
  border-bottom: 1px solid #F1F1F1;
  padding: 0.4rem 0.2rem 0.3rem 0.2rem;
  background-color: #FFFFFF;
}

.form-input {
  padding: 0.2rem 0;
  font-size: 0.8rem;
}

.form-item-label {
  display: inline-block;
  color: #000000;
  font-size: 1rem;
  width: 40%;
  position: relative;
}

.form-item-label-icon {
  width: 1rem;
  height: 1rem;
  line-height: 1rem;
  position: absolute;
  top: 0.2rem;
}

.form-item-label-text {
  height: 1rem;
  line-height: 1rem;
  color: #000000;
  font-size: 0.8rem;
  padding-left: 1.4rem;
  display: inline-block;
  text-align: center;
}

.form-item-content {
  display: inline-block;
  width: 100%;
  text-align: right;
  color: #999999;
  position: relative;
}

.activity-picker-item {
  display: inline-block;
  font-size: 1rem;
}

.packer-item-split {
  width: 1px;
  height: 0.6rem;
  background-color: #999999;
  display: inline-block;
  margin: 0 0.8rem;
}

.form-input {
  width: 100%;
}

.activity-place-input {
  display: inline-block;
  color: #999999;
  font-size: 0.8rem;
}

.activity-place-map-icon {
  width: 1rem;
  height: 1rem;
  line-height: 1rem;
  display: inline-block;
  margin-left: 0.4rem;
}

.more-btn-icon {
  width: 1rem;
  height: 1rem;
  line-height: 1rem;
  display: inline-block;
  margin-left: 0.4rem;
}

.content-label {
  float: left;
  line-height: 1.5rem;
}

.form-item-switch {
  display: inline-block;
}

.form-radio-item-label {
  display: block;
}

.form-radio-item {
  margin-left: 0.3rem;
}

.form-submit-btn-cont {
  width: 100%;
  text-align: center;
  background-color: #FFFFFF;
  padding: 1rem 0;
}

.form-submit-btn {
  display: inline-block;
  width: 80%;
  background-color: #FF7F24;
  color: #FFFFFF;
}

.form-submit-btn-hover {
  background-color: rgba(255, 127, 36, 0.521);
}